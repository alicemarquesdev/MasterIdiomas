@model RedefinirSenhaModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Redefinir Senha";
}

<body class="bg-gradient-primary">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image d-flex justify-content-center align-items-center">
                                <!-- Imagem relacionada à redefinição de senha -->
                                <img src="~/img/EsqueceuASenha.jpg" class="img-fluid" />
                            </div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <!-- Título da página -->
                                        <h1 class="h4 text-gray-900 mb-2">Esqueceu a senha?</h1>
                                        <!-- Texto explicativo sobre a redefinição de senha -->
                                        <p class="mb-4">
                                            Entendemos, imprevistos acontecem. Basta inserir seu endereço de e-mail abaixo e enviaremos um link para redefinir sua senha!
                                        </p>
                                    </div>
                                    <!-- Formulário para enviar e-mail de redefinição de senha -->
                                    <form class="user" asp-controller="Login" asp-action="EnviarLinkParaRedefinirSenha" asp-antiforgery="true"  method="post">
                                        <!-- Campo de E-mail -->
                                        <div class="form-group">
                                            <input type="email" class="form-control form-control-user" name="email" placeholder="Digite seu email">
                                        </div>
                                        <!-- Botão de envio para redefinir a senha -->
                                        <button type="submit" class="btn btn-primary btn-user btn-block">
                                            Redefinir Senha
                                        </button>
                                    </form>
                                    <hr>
                                    <!-- Links para criar conta e fazer login -->
                                    <div class="text-center">
                                        <a class="small" asp-controller="Login" asp-action="CriarConta">Crie uma conta!</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" asp-controller="Login" asp-action="Login">Já tem uma conta? Faça login!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
