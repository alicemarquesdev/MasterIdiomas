@model HomeViewModel

@{
    ViewData["Title"] = "Visao Geral";
}

<!-- Espaço antes do h2 -->
<div class="container mt-5 mb-5">
    <h2 class="mb-5">
        Olá, @Model.UsuarioNome. Bem-vindo à Master Idiomas!
    </h2>
</div>

<!-- Espaço entre o h2 e os cards -->
<div class="container mt-5 mb-5">
    <div class="row">
        <!-- Cards -->
        <div class="col-xl-3 col-md-6 mb-5">
            <a class="card border-left-primary text-decoration-none text-dark shadow h-100 py-2" asp-controller="Aluno" asp-action="Alunos">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                TOTAL DE ALUNOS
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model?.TotalAlunos</div>
                        </div>
                        <div class="col-auto"><i class="fas fa-user-graduate fa-2x text-gray-300"></i></div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-xl-3 col-md-6 mb-5">
            <a class="card border-left-success text-decoration-none text-dark shadow h-100 py-2" asp-controller="Curso" asp-action="Cursos">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                TOTAL DE CURSOS
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model?.TotalCursos</div>
                        </div>
                        <div class="col-auto"><i class="fas fa-book-open fa-2x text-gray-300"></i></div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-xl-3 col-md-6 mb-5">
            <a class="card border-left-info text-decoration-none text-dark shadow h-100 py-2" asp-controller="Professor" asp-action="Professores">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                TOTAL DE PROFESSORES
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model?.TotalProfessores</div>
                        </div>
                        <div class="col-auto"><i class="fas fa-chalkboard-teacher fa-2x text-gray-300"></i></div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-xl-3 col-md-6 mb-5">
            <a class="card border-left-warning text-decoration-none text-dark shadow h-100 py-2" asp-controller="Curso" asp-action="Cursos">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                TOTAL DE IDIOMAS
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model?.TotalIdiomas</div>
                        </div>
                        <div class="col-auto"><i class="fas fa-globe fa-2x text-gray-300"></i></div>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <!-- Espaço entre os cards e a tabela -->
    <div class="mt-3">
        <div class="card shadow mb-5">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Lista Geral de Cursos</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered text-center" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Curso</th>
                                <th>Turno</th>
                                <th>Nível</th>
                                <th>Início</th>
                                <th>Status</th>
                                <th>Alunos</th>
                                <th>Máx.Alunos</th>
                                <th>Professor</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model?.Cursos != null && Model.Cursos.Any())
                            {
                                foreach (var curso in Model.Cursos)
                                {
                                    <tr>
                                        <td><a class="font-weight-bold" asp-controller="Curso" asp-action="DetalhesCurso" asp-route-id="@curso.CursoId">@curso.Idioma</a></td>
                                        <td>@curso.Turno</td>
                                        <td>@curso.Nivel</td>
                                        <td>@curso.DataInicio.ToString("dd/MM/yyyy")</td>
                                        <td>@curso.Status</td>
                                        <td>@curso.QuantidadeAlunos</td>
                                        <td>@curso.MaxAlunos</td>
                                        <td>@(curso.Professor != null ? curso.Professor.Nome : "-")</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7">Nenhum curso encontrado.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
